<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tlo_glowne"
    android:layout_margin="4dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tlo_kontrolki"
        android:text="@string/napis_hello"
        android:textAlignment="center"
        android:padding="4dp"
        android:textStyle="italic|bold"
        style="@style/ArtStyle_1"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coss_do_zrobienia"
        style="@style/ArtStyle_1"/>

    <RadioGroup
        android:id="@+id/rG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tlo_kontrolki"
        style="@style/ArtStyle_1">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="radio1"
            style="@style/ArtStyle_1"
            android:background="@color/tlo_glowne"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ArtStyle_1"
            android:text="radio2"
            android:background="@color/tlo_glowne"/>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ArtStyle_1"
            android:text="przejÅ›cie do Akt2"
            android:background="@color/tlo_glowne"
            android:layout_marginBottom="4dp"/>
    </RadioGroup>

</LinearLayout>